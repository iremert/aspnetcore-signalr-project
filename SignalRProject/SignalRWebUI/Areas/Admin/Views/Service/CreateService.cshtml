@model  CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Servis İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Servis Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">

                            </div>
                            <div class="form-group">
                                <label for="Icon">İkon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Description" id="Description"> </textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Servis Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

