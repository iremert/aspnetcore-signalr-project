@model ResultServiceDto
@{
    ViewData["Title"] = "ServiceDetail";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Servis İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Servis Detay</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" readonly id="Title">

                            </div>
                            <div class="form-group">
                                <label for="Icon">İkon</label>
                                <input type="text" class="form-control" asp-for="Icon" readonly id="Icon">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <textarea rows="5" type="text" class="form-control" readonly asp-for="Description" id="Description"> </textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


