@model List<ResultServiceDto>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    int index = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Servis İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Servis Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Servis ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz !
                            <br />
                            <br />
                            <p>*Servis detay kısmından servis ile ilgili tüm bilgilere ulaşabilirsiniz !</p>
                            *Beklentimiz <strong>3 aktif</strong> yer olması yönündedir !
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">İkon</th>
                                  @*   <th scope="col">Açıklama</th> *@
                                    <th scope="col">Durum</th>
                                    <th scope="col">Durum Güncelle</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.Title</td>
                                        <td>@item.Icon</td>
                                     @*    <td>@item.Description</td> *@
                                        <td>@item.Status</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/Admin/Service/ChangeStatusToFalse/@item.ServiceID" class="btn btn-danger">Pasif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/Service/ChangeStatusToTrue/@item.ServiceID" class="btn btn-success">Aktif Yap</a></td>
                                        }
                                        <td><a href="/Admin/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/Service/ServiceDetail/@item.ServiceID" class="btn btn-outline-primary">Detay</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/Service/CreateService/" class="btn btn-outline-primary">Yeni Servis Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

