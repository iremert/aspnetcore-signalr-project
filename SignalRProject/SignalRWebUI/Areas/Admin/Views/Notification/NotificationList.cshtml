@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "NotificationList";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    int index = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz !
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Atılma Tarihi</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Okundu İşlemleri</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.Description</td>
                                        <td>@item.Date</td>
                                        <td><i class="@item.Icon"></i> </td>
                                        <td>@item.Status</td>
                                        <td>@if(item.Status==true)
                                            {
                                                <a href="/Admin/Notification/NotificationStatusChangeToFalse/@item.NotificationId" class="btn btn-danger    ">Okunmadı Yap</a>
                                            }
                                            else
                                            {
                                                <a href="/Admin/Notification/NotificationStatusChangeToTrue/@item.NotificationId" class="btn btn-success">Okundu Yap</a>
                                            }
                                        </td>
                                        <td><a href="/Admin/Notification/DeleteNotification/@item.NotificationId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/Notification/UpdateNotification/@item.NotificationId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/Notification/CreateNotification/" class="btn btn-outline-primary">Yeni Bildirim Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

