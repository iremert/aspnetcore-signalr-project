@model List<ResultCarDto>
@{
    ViewData["Title"] = "CarList";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    int index = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Araba İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Araba Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Araba ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz !
                            <br />
                            <br />
                            <p>*Beklentimiz öne çıkan mı kısmında <strong>3 aktif</strong>  yer olması yönündedir !</p>
                            <p>*Araba detay kısmından araba ile ilgili tüm bilgilere ulaşabilirsiniz !</p>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Araba Markası</th>
                                    <th scope="col">Araba Model </th>
                                    <th scope="col">Model Yılı</th>
                                    <th scope="col">Motor Tipi</th>
                                    <th scope="col">Şanzıman Türü</th>
                                    <th scope="col">Araba Rengi</th>
                                    <th scope="col">Fiyat </th>
                                    <th scope="col">Durum </th>
                                    <th scope="col">Öne Çıkan Güncelle </th>
                                    <th scope="col">Durumu Güncelle </th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                       
                                        <td>@index</td>
                                        <td>@item.BrandName</td>
                                        <td>@item.Model</td>
                                        <td>@item.ModelDate</td>
                                        <td>@item.EnginType</td>
                                        <td>@item.Gearbox</td>
                                        <td>@item.Color</td>
                                        <td>@item.Price</td>
                                        <td>@item.Status</td>
                                        @if(item.Status2==true)
                                        {
                                            <td><a href="/Admin/Car/ChangeStatus2ToFalse/@item.CarID" class="btn btn-danger">Öne Çıkarma</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/Car/ChangeStatus2ToTrue/@item.CarID" class="btn btn-success">Öne Çıkar</a></td>
                                        }
                                        @if(item.Status==true)
                                        {
                                            <td><a href="/Admin/Car/ChangeStatusToFalse/@item.CarID" class="btn btn-danger">Pasif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/Car/ChangeStatusToTrue/@item.CarID" class="btn btn-success">Aktif Yap</a></td>
                                        }
                                        <td><a href="/Admin/Car/DeleteCar/@item.CarID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/Car/UpdateCar/@item.CarID" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/Car/CarDetail/@item.CarID" class="btn btn-outline-primary">Detay</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/Car/CreateCar/" class="btn btn-outline-primary">Yeni Araba Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
