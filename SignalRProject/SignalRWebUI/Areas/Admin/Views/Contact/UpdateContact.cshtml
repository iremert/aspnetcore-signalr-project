@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input asp-for="ContactID" type="hidden" />
                            <div class="form-group">
                                <label for="NameSurname">Ad Soyad Giriniz</label>
                                <input type="text" class="form-control" asp-for="NameSurname" id="NameSurname">

                            </div>
                            <div class="form-group">
                                <label for="Email">Mail Giriniz</label>
                                <input type="text" class="form-control" asp-for="Email" id="Email">
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Subject" id="Subject">
                            </div>
                            <div class="form-group">
                                <label for="Message">Mesaj Giriniz</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Message" id="Message"></textarea>
                            </div>

                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">İletişim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


