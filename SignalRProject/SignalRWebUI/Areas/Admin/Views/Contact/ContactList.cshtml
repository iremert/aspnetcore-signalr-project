@model List<ResultContactDto>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    int index = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz !
                            <br />
                            <br />
                            <p>*İletişim detay kısmından iletişim ile ilgili tüm bilgilere ulaşabilirsiniz !</p>
                            *Beklentimiz <strong>1 aktif</strong> yer olması yönündedir !
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Mesaj</th>
                                    <th scope="col">Durum </th>
                                    <th scope="col">Okundu mu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Email</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Message</td>
                                        <td>@item.Status2</td>
                                        @if (item.Status2 == true)
                                        {
                                            <td><a href="/Admin/Contact/ChangeStatus2ToFalse/@item.ContactID" class="btn btn-danger">Okunmadı Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/Contact/ChangeStatus2ToTrue/@item.ContactID" class="btn btn-success">Okundu Yap</a></td>
                                        }
                                        <td><a href="/Admin/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/Contact/ContactDetail/@item.ContactID" class="btn btn-primary">Aç</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

