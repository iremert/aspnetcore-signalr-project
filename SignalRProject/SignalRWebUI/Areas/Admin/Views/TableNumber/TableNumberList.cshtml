@model List<ResultTableNumberDto>
@{
    ViewData["Title"] = "TableNumberList";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Masa Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Masa ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz !
                            <br />
                            <br />
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Masa Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Durum Güncelle</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Table</td>
                                        <td>@item.Status</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/Admin/TableNumber/ChangeStatusToFalse/@item.TableNumberId" class="btn btn-danger">Pasif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/TableNumber/ChangeStatusToTrue/@item.TableNumberId" class="btn btn-success">Aktif Yap</a></td>
                                        }
                                        <td><a href="/Admin/TableNumber/DeleteTableNumber/@item.TableNumberId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/TableNumber/UpdateTableNumber/@item.TableNumberId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/TableNumber/CreateTableNumber/" class="btn btn-outline-primary">Yeni Masa Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

