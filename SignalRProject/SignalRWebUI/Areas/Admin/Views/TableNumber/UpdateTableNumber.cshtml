@model UpdateTableNumberDto
@{
    ViewData["Title"] = "UpdateTableNumber";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="card">
                        <input  type="hidden" asp-for="TableNumberId"/>
                        <div class="card-header">
                            <div class="card-title">Masa Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Masa Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Table" id="Title">

                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Masa Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


