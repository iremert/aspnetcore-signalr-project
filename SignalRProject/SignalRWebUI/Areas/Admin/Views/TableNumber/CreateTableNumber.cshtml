@model CreateTableNumberDto
@{
    ViewData["Title"] = "CreateTableNumber";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Masa Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Table" id="Title">

                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Masa Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

