@model List<ResultContact2Dto>
@{
    ViewData["Title"] = "Contact2List";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    int index = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Sol Kısım İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Sol Kısım Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim sol kısım ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz !
                            <br />
                            <br />
                            <p>*İletişim sol kısım detay kısmından iletişim sol kısım ile ilgili tüm bilgilere ulaşabilirsiniz !</p>
                            *Beklentimiz <strong>1 aktif</strong>  yer olması yönündedir !
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Durum Güncelle</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Status</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/Admin/Contact2/ChangeStatusToFalse/@item.Contact2ID" class="btn btn-danger">Pasif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/Contact2/ChangeStatusToTrue/@item.Contact2ID" class="btn btn-success">Aktif Yap</a></td>
                                        }
                                        <td><a href="/Admin/Contact2/DeleteContact2/@item.Contact2ID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/Contact2/UpdateContact2/@item.Contact2ID" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/Contact2/Contact2Detail/@item.Contact2ID" class="btn btn-outline-primary">Detay</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/Contact2/CreateContact2/" class="btn btn-outline-primary">Yeni İletişim Sol Kısım Girişi</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

